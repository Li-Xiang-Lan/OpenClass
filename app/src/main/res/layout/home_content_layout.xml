<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.zcedu.openclass.view.tablayout.SlidingTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/themeColor"
        android:layout_margin="0.5dp"
        tl:tl_indicator_color="@color/white"
        tl:tl_indicator_corner_radius="0dp"
        tl:tl_indicator_margin_top="0dp"
        tl:tl_indicator_margin_bottom="0dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/themeColor"
        tl:tl_textUnselectColor="@color/white"
        ></com.zcedu.openclass.view.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
