<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="开课订单信息"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:textSize="15sp"
        android:textColor="@color/themeColor"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/themeColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资源类型："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/selected_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程"
                android:textSize="15sp"
                android:textColor="@color/color666"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/unselected_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题库"
                android:textSize="15sp"
                android:textColor="@color/color666"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="项目："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/theme_white_circle_bg"
            android:layout_marginRight="13dp"
            android:hint="请选择项目"
            android:textSize="13sp"
            android:textColor="@color/input_color"
            android:gravity="center"
            android:drawableRight="@drawable/drop_down_1"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="科目："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/theme_white_circle_bg"
            android:layout_marginRight="13dp"
            android:hint="请选择科目"
            android:textSize="13sp"
            android:textColor="@color/input_color"
            android:gravity="center"
            android:drawableRight="@drawable/drop_down_1"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="考季："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/theme_white_circle_bg"
            android:layout_marginRight="13dp"
            android:hint="请选择考季"
            android:textSize="13sp"
            android:textColor="@color/input_color"
            android:gravity="center"
            android:drawableRight="@drawable/drop_down_1"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="班次："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/theme_white_circle_bg"
            android:layout_marginRight="13dp"
            android:hint="请选择班次"
            android:textSize="13sp"
            android:textColor="@color/input_color"
            android:gravity="center"
            android:drawableRight="@drawable/drop_down_1"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="段次："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/theme_white_circle_bg"
            android:layout_marginRight="13dp"
            android:hint="请选择段次"
            android:textSize="13sp"
            android:textColor="@color/input_color"
            android:gravity="center"
            android:drawableRight="@drawable/drop_down_1"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否试听："
                android:textSize="15sp"
                android:textColor="@color/color999"
                android:paddingLeft="26dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/unselected_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textSize="15sp"
                    android:textColor="@color/color666"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/selected_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textSize="15sp"
                    android:textColor="@color/color666"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*试听订单有效期默认为3天"
            android:paddingLeft="26sp"
            android:textSize="12sp"
            android:textColor="@color/color999"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否附送题库："
            android:textSize="15sp"
            android:textColor="@color/color999"
            android:paddingLeft="26dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/selected_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textSize="15sp"
                android:textColor="@color/color666"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/unselected_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:textSize="15sp"
                android:textColor="@color/color666"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="开课有效期："
                android:textSize="15sp"
                android:textColor="@color/color999"
                android:paddingLeft="26dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/theme_white_circle_bg"
                android:layout_marginRight="13dp"
                android:hint="请选择有效期"
                android:textSize="13sp"
                android:textColor="@color/input_color"
                android:gravity="center"
                android:drawableRight="@drawable/drop_down_1"
                android:paddingRight="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="*开课有效期最多一年"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:textSize="12sp"
            android:textColor="@color/color999"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bgColor"
        android:padding="13dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:text="*1：一旦核查信息不真实，本单业绩为0；"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:text="*2：一经核查，本单财务数据作假，本月业绩为0，员工开除，移交司法机关。"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/themeColor"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重置"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="立即提交"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>
